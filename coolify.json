{
  "version": "1.0.0",
  "services": {
    "frontend": {
      "buildPack": "dockerfile",
      "dockerfilePath": "frontend/Dockerfile",
      "host": "your-frontend-domain.com",
      "protocol": "https",
      "repository": {
        "type": "git",
        "url": "your-git-repository-url"
      },
      "path": "/frontend",
      "port": 80,
      "env": {
        "NODE_ENV": "production",
        "REACT_APP_API_URL": "https://your-api-domain.com"
      }
    },
    "backend": {
      "buildPack": "nodejs",
      "host": "your-api-domain.com",
      "protocol": "https",
      "repository": {
        "type": "git",
        "url": "your-git-repository-url"
      },
      "path": "/backend",
      "buildCommand": "npm install",
      "startCommand": "node server.js",
      "port": 5000,
      "env": {
        "NODE_ENV": "production",
        "MONGODB_URI": "mongodb://mongodb:27017/guest-app",
        "JWT_SECRET": "${JWT_SECRET}",
        "PORT": "5002",
        "ALLOWED_ORIGINS": "https://bhaujanvypar.com,https://www.bhaujanvypar.com,http://localhost:3000"
      }
    }
  }
}
