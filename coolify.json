{
  "version": "1.0.0",
  "services": {
    "frontend": {
      "buildPack": "nodejs",
      "host": "your-frontend-domain.com",
      "protocol": "https",
      "repository": {
        "type": "git",
        "url": "your-git-repository-url"
      },
      "path": "/frontend",
      "buildCommand": "npm install && npm run build",
      "startCommand": "serve -s build",
      "port": 3000,
      "env": {
        "NODE_ENV": "production"
      }
    },
    "backend": {
      "buildPack": "nodejs",
      "host": "your-api-domain.com",
      "protocol": "https",
      "repository": {
        "type": "git",
        "url": "your-git-repository-url"
      },
      "path": "/backend",
      "buildCommand": "npm install",
      "startCommand": "node server.js",
      "port": 5000,
      "env": {
        "NODE_ENV": "production"
      }
    }
  }
}
